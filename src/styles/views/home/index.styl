// generic
body
    background linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab)
    background-size 400% 400%
    animation gradient 15s ease infinite

@keyframes
    gradient
        0%
		    background-position 0% 50%

        50%
            background-position 100% 50%

        100%
            background-position 0% 50%

.home
    .canvas
        min-height: 100vh
        &:not(.front) .content
            padding: 100px 20px 70px
            +min(1)
                padding: 100px 0 121px
        &:not(:first-of-type)
            border-top: 1px solid _border
            & > h2
                flex: 0 0 auto
                position: absolute
                top: 0
                left: 50%
                width: 200px
                margin: 0
                padding: 9px
                color: luminosity(scheme.border) > .5 ? darken(scheme.border, 40%) : lighten(scheme.border, 35%)
                font-size: 1em
                text-align: center
                font-weight: 600
                letter-spacing: 2px
                text-transform: uppercase
                border-radius: 0 0 4px 4px
                transform: translateX(-50%)
                background: _border
                border: 1px solid @background
                border-top: none
        +nav-1()
            display: none
            +min(2)
                display: block
                position: absolute
                left: 50%
                bottom: 35px
                transform: translateX(-50%)
            &[data-direction="prev"]
                transform: rotate(180deg) translateX(50%)
                transform-origin: 50% 40%
    // partials
    @require '_*'
